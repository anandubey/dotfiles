# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 5
gaps outer 5

# Hide titlebar on windows: 
default_border pixel 1

# Wallpaper
output * bg $HOME/Pictures/wallpapers/groovy-arch.png center

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:
smart_borders on

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

## Window decoration
# class                 border  backgr. text    indicator child_border
client.focused          #a8a9eb #414339 #F6EDD1 #a8a9eb   #a8a9eb 
client.focused_inactive #a8a9eb #282828 #F6EDD1 #414339   #414339
client.unfocused        #a8a9eb #282828 #F6EDD1 #414339   #414339
client.urgent           #ffb86c #ffb86c #282828 #a8a9eb   #ffb86c


# Status Bar:

bar {
   swaybar_command waybar
}
